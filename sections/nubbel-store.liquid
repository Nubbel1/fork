          alt="{{ product.title }}"
          class="w-full h-80 object-cover rounded-xl mb-4"
        />
        <h2 class="text-xl font-semibold mb-2">{{ product.title }}</h2>
        <p class="text-gray-600 text-sm mb-2">{{ product.description | truncate: 100 }}</p>
        <p class="text-lg font-semibold mb-4">{{ product.price | money }}</p>
        <form method="post" action="/cart/add">
          <input type="hidden" name="id" value="{{ product.variants.first.id }}">
          <button
            type="submit"
            class="block w-full bg-black text-white px-4 py-2 rounded-full text-center hover:bg-gray-800 transition"
